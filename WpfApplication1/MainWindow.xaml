        <BitmapImage x:Key="HighLightImage_Resetlayer" UriSource="/Globe.Resource;component/Medias/PublicTool/图层还原H.png"/>
        <!--空间量测-->
        <BitmapImage x:Key="DefaultImage_SpaceMeasure" UriSource="/Globe.Resource;component/Medias/PublicTool/空间测量.png"/>
        <BitmapImage x:Key="HighLightImage_SpaceMeasure" UriSource="/Globe.Resource;component/Medias/PublicTool/空间测量H.png"/>
        <!--三维标绘-->
        <BitmapImage x:Key="DefaultImage_Plot3D" UriSource="/Globe.Resource;component/Medias/PublicTool/三维标绘.png"/>
        <BitmapImage x:Key="HighLightImage_Plot3D" UriSource="/Globe.Resource;component/Medias/PublicTool/三维标绘H.png"/>
